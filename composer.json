{
    "name": "dfranquias/pay-sdk-php",
    "description": "SDK para integração da DFranquias Pay utilizando PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Dfranquias\\Pay\\Sdk\\": "src/"
        },
        "files": [
            "src/Helpers/constants.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Dfranquias\\Pay\\Sdk\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "DFranquias",
            "email": "dfranquias@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.2.5|^8.0",
        "guzzlehttp/guzzle": "^7",
        "spatie/data-transfer-object": "v1.x-dev",
        "vlucas/phpdotenv": "^5.5@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "rector/rector": "^0.18.1",
        "friendsofphp/php-cs-fixer": "^3.4"
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix",
        "rectify": "vendor/bin/rector process"
    }
}
